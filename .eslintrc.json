{
  "root": true,
  "ignorePatterns": [
    "**/*.html"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-var": "error",
    "no-unused-vars": "off",
    "no-global-assign": "off",
    "guard-for-in": "error",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": true
      }
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "all"
      }
    ],
    "standard/no-callback-literal": "off",
    "node/no-deprecated-api": "off"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": "*.ts",
      "rules": {
        "no-undef": "off",
        "no-redeclare": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/no-redeclare": [
          "error"
        ],
        "no-use-before-define": "off"
      },
      "extends": [
        "plugin:prettier/recommended"
      ]
    }
  ]
}